<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <ImageView
        android:id="@+id/imgVwImgRestaurante"
        android:layout_width="343dp"
        android:layout_height="145dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimaryDark" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVwImgRestaurante">

    <TextView
        android:id="@+id/txtRestauranteNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Isil Miraflores"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="193dp" />

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/isil_description"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="264dp" />

    <TextView
        android:id="@+id/txtHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12pm a 3 pm"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="348dp" />

    <TextView
        android:id="@+id/txtReferencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dentro del comedor de Miraflores"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="394dp" />

    <TextView
        android:id="@+id/txtTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:text="No disponible" />

    <Button
        android:id="@+id/btnReseñas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reseñas"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="396dp" />

    </LinearLayout>

    <RatingBar
        android:id="@+id/mRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="28dp"
        android:stepSize="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/txtRateComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:layout_marginTop="28dp"
        android:text="..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mRatingBar" />

</android.support.constraint.ConstraintLayout>